@page
@model FoodKept.Pages.FoodModel
@{
    ViewData["Title"] = "Food";
}
@Html.AntiForgeryToken()
<form>
    <p>
        Food Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].FoodName)
            </th>
            <th>
                Restaurant
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Discount)
            </th>
            <th>
                Food Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var food in Model.Food)
        {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => food.FoodName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => food.ApplicationUser.RestaurantName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => food.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => food.Discount)
                    </td>
                    <td>
                        <img src="data:image/jpg/png;base64,@System.Convert.ToBase64String(food.FoodImage)" width="80" height="80" />
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary text-light" id="addToCart" value="@food.ID">Add to Cart</button>
                    </td>
                </tr>
        }
    </tbody>
</table>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("#addToCart").click(function () {
            $.ajax({
                type: "POST",
                url: "/FoodCustomer/Cart?handler=AddToCart",
                data: { "name": "af" },
                beforeSend: function (xhr) {
                    xhr.setRequestHeader("XSRF-TOKEN",
                        $('input:hidden[name="__RequestVerificationToken"]').val());
                },
                success: function (response) {
                    alert(response)
                },
                error: function () {
                    alert("error")
                }
            })
        })
    })
</script>
