<!-- shop section -->

<section class="shop_section layout_padding">
    <div class="box">
        <div class="detail-box ml-5 banner-text">
            <h2>
                FoodKept
            </h2>
            <p>
                Buy food at a discount, while minimizing food waste.
            </p>
            <div class="btn-box">
                @if (signInManager.IsSignedIn(User))
                {
                    var user = userManager.GetUserAsync(User).Result;
                    var role = userManager.GetRolesAsync(user).Result[0];

                    @if (role == "Customer")
                    {
                        <a asp-page="/FoodCustomer/Food">
                            Buy Now
                        </a>
                    }
                    else
                    {
                        <a asp-page="/FoodPages/Index">
                            Buy Now
                        </a>
                    }
                }
                else
                {
                    <a asp-page="/Login">
                        Buy Now
                    </a>
                }
            </div>
        </div>
        <div class="img-box" id="bar">
            <img src="images/shop-img.jpg" alt="">
        </div>
    </div>
</section>

<!-- end shop section -->
