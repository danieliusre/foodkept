@page
@model FoodKept.Pages.FoodPages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Food</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Food.FoodName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.FoodName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Food.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Food.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Food.FoodCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.FoodCategory)
        </dd>
        <dt class="col-sm-2">
            Food Image
        </dt>
        @if (Model.Food.FoodImage != null)
        {
            <dd class="col-sm-10">
                <img src="data:image/jpg/png;base64,@System.Convert.ToBase64String(Model.Food.FoodImage)" width="80" height="80" />
            </dd>
        }
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Food.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
