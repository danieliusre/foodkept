@page
@model FoodKept.Pages.FoodPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<!--Markup to add search field on the page-->
<form>
    <p>
        Food Name: <input type = "text" asp-for = "SearchString" />
        <input type = "submit" value = "Filter" />
    </p>
</form>

<!--end of the form markup-->

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].FoodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food[0].Discount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Food)
        {
            @if (item.UserID == Model.id)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FoodName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Discount)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.FoodID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.FoodID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.FoodID">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
