@page
@model FoodKept.Pages.DiscountPages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container container_mt">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Discount</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Discount.DiscountPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Discount.DiscountPrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Discount.DiscountPercent)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Discount.DiscountPercent)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Discount.FromTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Discount.FromTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Discount.ToTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Discount.ToTime)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Discount.ID" />
            <input type="submit" value="Delete" class="btn btn-danger" asp-route-id="@Model.Discount.ID" asp-route-foodID="@Model.Food.ID" /> |
            <a asp-page="./Index" asp-route-id="@Model.Food.ID">Back to List</a>
        </form>
    </div>
</div>
